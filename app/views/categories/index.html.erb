<%= render "form" %>

<h3 class="text-xl font-semibold mb-4">登録済みカテゴリ一覧</h3>
<div class="bg-white shadow rounded-lg overflow-hidden">
  <table class="min-w-full border-collapse">
    <thead class="bg-gray-100">
      <tr>
        <th class="border px-6 py-3 text-left text-sm font-medium text-gray-600">カテゴリ名</th>
        <th class="border px-6 py-3 text-left text-sm font-medium text-gray-600">賞味期限(日)</th>
        <th class="border px-6 py-3 text-left text-sm font-medium text-gray-600">操作</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr class="hover:bg-gray-50 transition">
          <td class="border px-6 py-4"><%= category.name %></td>
          <td class="border px-6 py-4"><%= category.default_expiration %></td>
          <td class="border px-6 py-4 space-x-2">
            <%= link_to "編集", edit_category_path(category),
                        class: "text-blue-600 hover:text-blue-800 font-medium" %>
            <%= button_to "削除", category_path(category), method: :delete,
                        data: { confirm: "本当に削除しますか？" },
                        class: "text-red-600 hover:text-red-800 font-medium" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
