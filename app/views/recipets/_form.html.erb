<%= form_with model: @recipet, local: true do |f| %>
  <div class="space-y-6 bg-white p-6 rounded-lg shadow-md max-w-3xl mx-auto">
    <div>
      <%= f.label :purchased_at, "購入日", class: "block text-sm font-semibold text-gray-700 mb-1" %>
      <%= f.date_select :purchased_at, {}, class: "border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div id="recipet_items" class="space-y-6">
      <%= f.fields_for :recipet_items do |ri_fields| %>
        <div class="border border-gray-300 rounded-lg p-4 bg-gray-50">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <%= ri_fields.fields_for :item do |item_fields| %>
                <%= item_fields.label :name, "商品名", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= item_fields.text_field :name, class: "w-full border-gray-300 rounded px-3 py-2" %>

                <%= item_fields.fields_for :category do |cat_fields| %>
                  <%= cat_fields.label :name, "カテゴリ名", class: "block text-sm font-medium text-gray-700 mt-4 mb-1" %>
                  <%= cat_fields.text_field :name, class: "w-full border-gray-300 rounded px-3 py-2" %>
                <% end %>
              <% end %>
            </div>

            <div class="self-end">
              <%= ri_fields.label :quantity, "数量", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= ri_fields.number_field :quantity, class: "w-full border-gray-300 rounded px-3 py-2" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div>
      <%= f.submit "保存", class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition" %>
    </div>
  </div>
<% end %>
