<h1 class="text-2xl font-bold mb-4">レシート一覧</h1>

<div class="bg-white shadow border rounded">
  <table class="w-full table-auto text-sm text-left text-gray-700">
    <thead class="bg-gray-100 text-gray-600 uppercase tracking-wider">
      <tr>
        <th class="px-4 py-2">ID</th>
        <th class="px-4 py-2">ユーザー</th>
        <th class="px-4 py-2">購入日</th>
        <th class="px-4 py-2">操作</th>
      </tr>
    </thead>
    <tbody>
      <% @recipets.each do |recipet| %>
        <tr class="border-t hover:bg-gray-50">
          <td class="px-4 py-2"><%= recipet.id %></td>
          <td class="px-4 py-2"><%= current_user.name %></td>
          <td class="px-4 py-2"><%= recipet.purchased_at&.strftime("%Y/%m/%d") %></td>
          <td class="px-4 py-2">
            <div class="flex space-x-4">
            <%= link_to "表示", recipet_path(recipet), class: "text-blue-600 hover:underline" %>
            <%= link_to "編集", edit_recipet_path(recipet), class: "text-blue-600 hover:underline" %>
            <%= button_to "削除", recipet_path(recipet), method: :delete, form: { data: { turbo_confirm: "本当に削除しますか？" } }, class: "text-red-500 hover:underline" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4 text-right">
  <%= link_to "＋ 新規作成", new_recipet_path, class: "bg-blue-500 text-white text-sm px-4 py-2 rounded hover:bg-blue-600" %>
</div>
