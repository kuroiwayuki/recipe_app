<div class="border border-gray-300 p-4 rounded mb-4 bg-gray-50" data-nested-form-target="item">
  <%= f.fields_for :item do |item_fields| %>
    <%= item_fields.label :name, "商品名", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= item_fields.text_field :name, class: "w-full border-gray-300 rounded px-3 py-2 mb-3" %>

    <%= item_fields.fields_for :category do |cat_fields| %>
      <%= cat_fields.label :name, "カテゴリ名", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= cat_fields.text_field :name, class: "w-full border-gray-300 rounded px-3 py-2" %>
    <% end %>
  <% end %>

  <%= f.label :quantity, "数量", class: "block text-sm font-medium text-gray-700 mt-4 mb-1" %>
  <%= f.number_field :quantity, class: "w-24 border-gray-300 rounded px-3 py-2" %>

  <!-- 削除ボタン -->
  <button type="button"
          class="text-red-600 text-sm mt-4 inline-block"
          data-action="nested-form#remove">
    ✕ この商品を削除
  </button>
</div>
