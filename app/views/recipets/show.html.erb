<div class="max-w-3xl mx-auto p-8 bg-white rounded-2xl shadow-lg space-y-8">

  <div class="text-center border-b pb-4">
    <h2 class="text-2xl font-bold mb-2">🧾 レシート詳細</h2>
    <p class="text-gray-600">
      購入日: <span class="font-semibold"><%= l(@recipet.purchased_at, format: :receipt) %></span>
    </p>
  </div>

  <div>
    <h3 class="text-xl font-semibold mb-6">🛒 購入商品一覧</h3>
    <ul class="space-y-4">
      <% @recipet.recipet_items.each do |item| %>
        <li class="flex items-start space-x-4 p-4 bg-gray-50 rounded-lg shadow-sm hover:shadow-md transition">
          <div class="flex-shrink-0 w-10 h-10 bg-green-100 text-green-600 flex items-center justify-center rounded-full text-xl">
          </div>
          <div class="flex-1">
            <div class="font-semibold text-gray-800 text-lg"><%= item.item.name %></div>
            <div class="text-gray-600 text-sm mt-1">
              カテゴリ: <%= item.item.category.name %> / 数量: <%= item.quantity %>
            </div>
          </div>
          <div class="flex-shrink-0">
            <%= button_to "削除", recipet_recipet_item_path(@recipet, item),
                          method: :delete,
                          data: { turbo_confirm: "この商品を削除しますか？" },
                          class: "text-red-500 hover:underline text-sm" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="text-center pt-4 border-t">
    <%= link_to "一覧に戻る", recipets_path,
      class: "inline-block px-6 py-2 bg-gray-200 rounded shadow hover:bg-gray-300 transition" %>
  </div>

</div>
